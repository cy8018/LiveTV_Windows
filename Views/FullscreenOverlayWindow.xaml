<Window x:Class="IPTVPlayer.Views.FullscreenOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IPTVPlayer.Converters"
        Title="Overlay" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="#01000000"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        MouseMove="Window_MouseMove"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:AddOneConverter x:Key="AddOneConverter"/>

        <!-- Styles -->
        <Style x:Key="OverlayIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#60FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OverlayVolumeSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="6" Background="#40FFFFFF" CornerRadius="3"/>
                            <Border Height="6" Background="#FF4CAF50" CornerRadius="3" HorizontalAlignment="Left"
                                    Width="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Width}"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="#FF4CAF50" Width="20" Height="20"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OverlaySearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#60FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OverlayChannelListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="MinHeight" Value="64"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainOverlayGrid">
        <!-- Clock and Close App Button (top right) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,14,14,0">
            <TextBlock x:Name="BatteryIcon" Text="" Foreground="#FFFFFF" FontSize="28" 
                       FontFamily="Segoe MDL2 Assets"
                       VerticalAlignment="Center" Margin="0,0,6,0" Visibility="Collapsed">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.8" Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="BatteryPercent" Text="" Foreground="#FFFFFF" FontSize="26" FontWeight="SemiBold"
                       VerticalAlignment="Center" Margin="0,0,16,0" Visibility="Collapsed">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.8" Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock x:Name="ClockText" Text="" Foreground="#FFFFFF" FontSize="28" FontWeight="SemiBold"
                       VerticalAlignment="Center" Margin="0,0,12,0">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.8" Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button x:Name="CloseAppButton" Style="{StaticResource OverlayIconButton}" 
                    Width="44" Height="44" VerticalAlignment="Center"
                    ToolTip="Close App" Click="CloseApp_Click">
                <TextBlock Text="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
            </Button>
        </StackPanel>

        <!-- Channel Sidebar -->
        <Border x:Name="SidebarPanel" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" 
                Background="#E8252526" Margin="0,100,0,100">
            <Border.CornerRadius>
                <CornerRadius TopRight="12" BottomRight="12" TopLeft="0" BottomLeft="0"/>
            </Border.CornerRadius>
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform" X="0"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Direction="0"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" x:Name="ChannelList" Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource OverlayChannelListBoxItem}"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.CanContentScroll="False"
                         VirtualizingStackPanel.IsVirtualizing="False"
                         SelectionChanged="ChannelList_SelectionChanged"
                         PreviewMouseWheel="ChannelList_PreviewMouseWheel"
                         PreviewKeyDown="ChannelList_PreviewKeyDown"
                         ScrollViewer.ScrollChanged="ChannelList_ScrollChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="56"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="6" Background="#1E1E1E" Margin="0,0,8,0">
                                    <Grid>
                                        <Image Source="{Binding Logo, TargetNullValue={x:Null}}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Margin="3"/>
                                        <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#80FFFFFF" FontSize="16" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Logo}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="15" Foreground="#FFFFFF" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Group}" FontSize="12" Foreground="#80FFFFFF" TextTrimming="CharacterEllipsis"
                                               Visibility="{Binding Group, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Control Bar (bottom) -->
        <Border x:Name="ControlBarPanel" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
                Background="#E8252526" Padding="20,15" Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="-5" Opacity="0.5" Direction="90"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Show Channels" Click="ShowChannels_Click">
                        <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                    <Button x:Name="ToggleSidebarPositionButton" Style="{StaticResource OverlayIconButton}" ToolTip="Move channel list to other side" Click="ToggleSidebarPosition_Click" Margin="4,0,0,0">
                        <TextBlock x:Name="ToggleSidebarIcon" Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Previous Channel" Command="{Binding PreviousChannelCommand}">
                        <TextBlock Text="&#xE892;" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Play/Pause" Command="{Binding PlayPauseCommand}" Margin="8,0">
                        <TextBlock Text="{Binding PlayPauseIcon}" FontFamily="Segoe MDL2 Assets" FontSize="28"/>
                    </Button>
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Stop" Command="{Binding StopCommand}">
                        <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Next Channel" Command="{Binding NextChannelCommand}" Margin="8,0,0,0">
                        <TextBlock Text="&#xE893;" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" Orientation="Horizontal">
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Previous Source" Command="{Binding TryPreviousSourceCommand}"
                            Visibility="{Binding CurrentChannel, Converter={StaticResource NullToVisibilityConverter}}" Margin="0,0,12,0">
                        <TextBlock Text="&#xE76B;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <TextBlock Text="{Binding CurrentChannel.Name, FallbackValue='No channel selected'}" Foreground="#FFFFFF" FontSize="20" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" MaxWidth="500" VerticalAlignment="Center"/>
                    <Border BorderBrush="#80FFFFFF" BorderThickness="1" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center"
                            Visibility="{Binding CurrentChannel, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Foreground="#80FFFFFF" FontSize="12">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="CurrentChannel.CurrentSourceIndex" Converter="{StaticResource AddOneConverter}"/>
                                    <Binding Path="CurrentChannel.SourceCount"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Next Source" Command="{Binding TryNextSourceCommand}"
                            Visibility="{Binding CurrentChannel, Converter={StaticResource NullToVisibilityConverter}}" Margin="12,0,0,0">
                        <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Mute" Command="{Binding MuteCommand}">
                        <TextBlock Text="{Binding VolumeIcon}" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                    <Slider Style="{StaticResource OverlayVolumeSlider}" Value="{Binding Volume}" Width="200" Margin="10,0,20,0"/>
                    <Button Style="{StaticResource OverlayIconButton}" ToolTip="Exit Fullscreen (Esc)" Click="ExitFullscreen_Click">
                        <TextBlock Text="&#xE73F;" FontFamily="Segoe MDL2 Assets" FontSize="22"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
