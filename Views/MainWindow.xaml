<Window x:Class="IPTVPlayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:IPTVPlayer.ViewModels"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        Title="Live TV"
        Icon="/Resources/logo.png"
        Height="720" 
        Width="1280"
        MinHeight="480"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        TouchDown="Window_TouchDown"
        TouchMove="Window_TouchMove"
        StateChanged="Window_StateChanged">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="48" ResizeBorderThickness="8" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0,0,0">
                <Image Source="/Resources/logo.png" Width="44" Height="44" VerticalAlignment="Center" Margin="0,0,6,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="Live TV" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Playing Info (Center) -->
            <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
            
            <!-- Window Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="MinimizeButton" Click="MinimizeButton_Click" Width="48" Height="48" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock Text="&#xE949;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="MaximizeButton" Click="MaximizeButton_Click" Width="48" Height="48" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock x:Name="MaximizeIcon" Text="&#xE739;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click" Width="48" Height="48" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <TextBlock Text="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid x:Name="MainGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition x:Name="ControlBarRow" Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Grid x:Name="Sidebar" Grid.Column="0" Background="{StaticResource SecondaryBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" x:Name="ChannelList" Style="{StaticResource ChannelListBox}"
                     ItemContainerStyle="{StaticResource ChannelListBoxItem}"
                     SelectionMode="Multiple"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.PanningMode="VerticalOnly"
                     ScrollViewer.CanContentScroll="False"
                     VirtualizingStackPanel.IsVirtualizing="False"
                     SelectionChanged="ChannelList_SelectionChanged"
                     ScrollViewer.ScrollChanged="ChannelList_ScrollChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="56"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="6" Background="{StaticResource PrimaryBrush}" Margin="0,0,8,0">
                                <Grid>
                                    <Image Source="{Binding Logo, TargetNullValue={x:Null}}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Margin="3"/>
                                    <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="16" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Logo}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="15" Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Row="1" Text="{Binding Group}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"
                                           Visibility="{Binding Group, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Margin="12">
                <Button Style="{StaticResource ModernButton}" Command="{Binding OpenPlaylistCommand}" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE838;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Open Playlist" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ModernButton}" Click="EditChannels_Click" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Edit Channels" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>

        <!-- Video Area with LibVLCSharp -->
        <Grid x:Name="VideoArea" Grid.Column="1" Grid.Row="0" Background="Black">
            <!-- VLC Video View - Only visible when playing AND not loading -->
            <!-- VLC renders via a separate HWND on top of WPF, so we must collapse it to show the loading overlay -->
            <Border Background="Black">
                <Border.Visibility>
                    <MultiBinding Converter="{StaticResource PlayingAndNotLoadingConverter}">
                        <Binding Path="IsPlaying"/>
                        <Binding Path="IsLoading"/>
                    </MultiBinding>
                </Border.Visibility>
                <vlc:VideoView x:Name="VideoView" MediaPlayer="{Binding MediaPlayer}" Background="Black"/>
            </Border>
            
            <!-- Placeholder when app first opens and never played -->
            <Grid x:Name="PlaceholderPanel"
                  Visibility="{Binding HasEverPlayed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                  Background="Black">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="80" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                    <TextBlock Text="Select a channel to start watching" FontSize="20" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Click a channel to start playback" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Loading/Buffering Overlay -->
            <Border Background="#CC000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Pulsing dots -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse x:Name="Dot1" Width="12" Height="12" Fill="{StaticResource AccentBrush}" Margin="4,0" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform><ScaleTransform x:Name="Dot1Scale" ScaleX="1" ScaleY="1"/></Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="Dot1" Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.3" BeginTime="0:0:0" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot1Scale" Storyboard.TargetProperty="ScaleX" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot1Scale" Storyboard.TargetProperty="ScaleY" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Dot2" Width="12" Height="12" Fill="{StaticResource AccentBrush}" Margin="4,0" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform><ScaleTransform x:Name="Dot2Scale" ScaleX="1" ScaleY="1"/></Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="Dot2" Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.3" BeginTime="0:0:0.15" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot2Scale" Storyboard.TargetProperty="ScaleX" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0.15" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot2Scale" Storyboard.TargetProperty="ScaleY" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0.15" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <Ellipse x:Name="Dot3" Width="12" Height="12" Fill="{StaticResource AccentBrush}" Margin="4,0" Opacity="0.3" RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform><ScaleTransform x:Name="Dot3Scale" ScaleX="1" ScaleY="1"/></Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="Dot3" Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.3" BeginTime="0:0:0.3" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot3Scale" Storyboard.TargetProperty="ScaleX" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0.3" AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="Dot3Scale" Storyboard.TargetProperty="ScaleY" From="1" To="1.4" Duration="0:0:0.3" BeginTime="0:0:0.3" AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </StackPanel>
                    <TextBlock Text="{Binding LoadingText, FallbackValue='Loading...'}" 
                               Foreground="{StaticResource TextBrush}" FontSize="18" FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentChannel.Name}" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" 
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Transparent overlay to capture mouse events (on top of everything) -->
            <Border x:Name="VideoMouseOverlay" Background="Transparent" 
                    MouseLeftButtonDown="VideoMouseOverlay_MouseLeftButtonDown"
                    MouseMove="VideoMouseOverlay_MouseMove"/>
        </Grid>

        <!-- Control Bar (Normal Mode) -->
        <Border x:Name="ControlBar" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Background="{StaticResource SecondaryBrush}" Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="ToggleSidebarButton" Style="{StaticResource IconButton}" ToolTip="Toggle Channel List" Click="ToggleSidebar_Click" Margin="0,0,8,0">
                        <TextBlock x:Name="ToggleSidebarIcon" Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <Button x:Name="ToggleSidebarPositionButton" Style="{StaticResource IconButton}" ToolTip="Move channel list to other side" Click="ToggleSidebarPosition_Click" Margin="0,0,8,0">
                        <TextBlock x:Name="ToggleSidebarPositionIcon" Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Previous Channel" Command="{Binding PreviousChannelCommand}">
                        <TextBlock Text="&#xE892;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Play/Pause" Command="{Binding PlayPauseCommand}" Margin="8,0">
                        <TextBlock Text="{Binding PlayPauseIcon}" FontFamily="Segoe MDL2 Assets" FontSize="24"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Stop" Command="{Binding StopCommand}">
                        <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" ToolTip="Next Channel" Command="{Binding NextChannelCommand}" Margin="8,0,0,0">
                        <TextBlock Text="&#xE893;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" Orientation="Horizontal"
                            Visibility="{Binding CurrentChannel, Converter={StaticResource NullToVisibilityConverter}}">
                    <Button Style="{StaticResource IconButton}" ToolTip="Previous Source" Command="{Binding TryPreviousSourceCommand}"
                            Visibility="{Binding CurrentChannel.SourceCount, Converter={StaticResource GreaterThanOneToVisibilityConverter}}" Margin="0,0,12,0">
                        <TextBlock Text="&#xE76B;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <TextBlock Text="{Binding CurrentChannel.Name, FallbackValue='No channel selected'}" Foreground="{StaticResource TextBrush}" FontSize="17" TextTrimming="CharacterEllipsis" MaxWidth="350" VerticalAlignment="Center"/>
                    <Border BorderBrush="{StaticResource TextSecondaryBrush}" BorderThickness="1" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center"
                            Visibility="{Binding CurrentChannel.SourceCount, Converter={StaticResource GreaterThanOneToVisibilityConverter}}">
                        <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}">
                                    <Binding Path="CurrentChannel.CurrentSourceIndex" Converter="{StaticResource AddOneConverter}"/>
                                    <Binding Path="CurrentChannel.SourceCount"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>
                    <Button Style="{StaticResource IconButton}" ToolTip="Next Source" Command="{Binding TryNextSourceCommand}"
                            Visibility="{Binding CurrentChannel.SourceCount, Converter={StaticResource GreaterThanOneToVisibilityConverter}}" Margin="12,0,0,0">
                        <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource IconButton}" ToolTip="Mute" Command="{Binding MuteCommand}">
                        <TextBlock Text="{Binding VolumeIcon}" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                    <Slider x:Name="VolumeSlider" Style="{StaticResource VolumeSlider}" Value="{Binding Volume}" Margin="8,0,15,0"/>
                    <Button Style="{StaticResource IconButton}" ToolTip="Fullscreen (F)" Click="Fullscreen_Click">
                        <TextBlock x:Name="FullscreenIcon" Text="&#xE740;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Grid>
</Window>
