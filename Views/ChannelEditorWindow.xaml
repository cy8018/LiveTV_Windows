<Window x:Class="IPTVPlayer.Views.ChannelEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Channels" 
        Width="600" Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="400" MinHeight="300"
        ShowInTaskbar="False">

    <Border Background="#252526" BorderBrush="#3C3C3C" BorderThickness="1" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8,8,0,0" Padding="16,12" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Edit Channels" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                    <Button HorizontalAlignment="Right" Width="32" Height="32" Click="CloseButton_Click"
                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#FFFFFF"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Toolbar -->
            <Border Grid.Row="1" Background="#1E1E1E" Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Box -->
                    <Border Grid.Column="0" Background="#3C3C3C" CornerRadius="4" Padding="8,6" Margin="0,0,12,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                       Foreground="#808080" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" BorderThickness="0" 
                                     Foreground="#FFFFFF" FontSize="14" VerticalAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="CaretBrush" Value="#FFFFFF"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>
                    
                    <!-- Filter Toggle -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <CheckBox x:Name="ShowHiddenCheckBox" Content="Show Hidden" Foreground="#CCCCCC" IsChecked="True"
                                  VerticalAlignment="Center" Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Channel List -->
            <ListView x:Name="ChannelListView" Grid.Row="2" Background="Transparent" BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      SelectionMode="Single" AllowDrop="True"
                      DragOver="ChannelListView_DragOver" Drop="ChannelListView_Drop">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Margin" Value="4,2"/>
                        <Setter Property="AllowDrop" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}"
                                            BorderThickness="0,2,0,0" BorderBrush="Transparent">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3C3C3C"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#0078D4"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Drag Handle -->
                            <TextBlock Grid.Column="0" Text="&#xE700;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                       Foreground="#666666" VerticalAlignment="Center" Margin="0,0,8,0" Cursor="SizeAll"
                                       MouseLeftButtonDown="DragHandle_MouseLeftButtonDown"
                                       ToolTip="Drag to reorder"/>
                            
                            <!-- Visibility Toggle -->
                            <CheckBox Grid.Column="1" IsChecked="{Binding IsHidden, Converter={StaticResource InverseBoolConverter}}" 
                                      VerticalAlignment="Center" Margin="0,0,8,0"
                                      ToolTip="Show/Hide channel">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.4" ScaleY="1.4"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            
                            <!-- Channel Logo -->
                            <Border Grid.Column="2" Width="40" Height="40" CornerRadius="4" Background="#1E1E1E" Margin="0,0,8,0">
                                <Grid>
                                    <Image Source="{Binding Logo, TargetNullValue={x:Null}}" Stretch="Uniform" Margin="2"/>
                                    <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="#808080" FontSize="12" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Logo}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            
                            <!-- Channel Info -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#FFFFFF" TextTrimming="CharacterEllipsis">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding Group}" FontSize="11" Foreground="#808080" TextTrimming="CharacterEllipsis"
                                           Visibility="{Binding Group, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"/>
                            </StackPanel>
                            
                            <!-- Move Buttons -->
                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Width="32" Height="32" Click="MoveToTop_Click" ToolTip="Move to Top"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C4C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="&#xE74A;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#CCCCCC"/>
                                </Button>
                                <Button Width="32" Height="32" Click="MoveUp_Click" ToolTip="Move Up"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C4C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="&#xE70E;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#CCCCCC"/>
                                </Button>
                                <Button Width="32" Height="32" Click="MoveDown_Click" ToolTip="Move Down"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C4C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#CCCCCC"/>
                                </Button>
                                <Button Width="32" Height="32" Click="MoveToBottom_Click" ToolTip="Move to Bottom"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4C4C4C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="&#xE74B;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#CCCCCC"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Footer with Buttons -->
            <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="0,0,8,8" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Show All" Click="ShowAll_Click" Margin="0,0,8,0"
                                Background="#3C3C3C" Foreground="#FFFFFF" Padding="12,8" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4C4C4C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Hide All" Click="HideAll_Click"
                                Background="#3C3C3C" Foreground="#FFFFFF" Padding="12,8" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4C4C4C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Reset Order" Click="ResetOrder_Click" Margin="8,0,0,0"
                                Background="#3C3C3C" Foreground="#FFFFFF" Padding="12,8" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4C4C4C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="Cancel" Click="CancelButton_Click" Margin="0,0,8,0"
                                Background="#3C3C3C" Foreground="#FFFFFF" Padding="16,8" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4C4C4C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Save" Click="SaveButton_Click"
                                Background="#0078D4" Foreground="#FFFFFF" Padding="24,8" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A8AD4"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
